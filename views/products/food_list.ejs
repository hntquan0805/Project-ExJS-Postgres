<div class="row">
    <% if (products.length === 0) { %>
    <div class="col-lg-12 d-flex justify-content-center mb-4">
        <span class="text-center lead">(No products found)</span>
    </div>
    <% } else { %>
        <% products.forEach(product => { %>
        <div class="col-lg-6 border-end pb-4">
            <div class="d-flex align-items-center me-1">
                <a href="/products/<%= product.id %>">
                <img class="flex-shrink-0 img-fluid rounded" src="/img/food/menu-<%= product.id % 8 + 1 %>.jpg" alt="" style="width: 100px;">
                </a>
                <div class="w-100 d-flex flex-column text-start ps-2">
                <h5 class="d-flex justify-content-between border-bottom nunito-custom fw-bold">
                    <span><a href="/products/<%= product.id %>"><%= product.name %></a></span>
                    <span class="text-primary">$<%= product.price %></span>
                </h5>
                <div class="row g-3">
                    <small class="col-10 fst-italic"><%= product.description %></small>
                    <button class="btn btn-outline-primary col-2 pb-1 pt-0" onclick="addToCart('<%= product.id%>')">
                    <%- include('../partials/cart_icon.ejs') -%>
                    </button>
                </div>
                </div>
            </div>
        </div>
        <% }); %>
    <% }; %>
</div>